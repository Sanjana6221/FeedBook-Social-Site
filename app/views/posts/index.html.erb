<div class="container">
	<div class="col-md-12 text-center">
		<h3>Welcome <%= current_user.firstname.capitalize 	%></h3>
	</div>

	<div class="col-md-12">
		<div class="col-md-6">
			<h4><%= link_to 'Add Post', posts_path%></h4>
			  <%= render 'form' %>
		</div>
		<div class="col-md-6">
			<% @friends_posts.each do |post| %>
				<div class="content">
					<p>
						<%= post.content %>
					</p>
					<div class="img">
						<%= image_tag post.image %>
					</div>

					<p>
						<%= post.privacy_type %>
					</p>

					<p>
					<% if current_user.id == post.user_id%>
						<%= link_to 'Destroy', post_path(post),
			            data: {:confirm => 'Are you sure?'}, :method => :delete %>
			      <%= link_to 'Edit',edit_post_path(post), remote:true%>
			    <% end %>
			    </p>
				</div>
			<% end %>
		</div>
	</div>
</div>