<div class="container">
  <div class="col-md-12 text-center">
    <h3>Welcome <%= current_user.firstname.capitalize %></h3>
  </div>

  <div class="col-md-12">
    <div class="col-md-6">
      <%= link_to new_post_path, remote: true do %>
      <button class="btn btn-primary">New Post</button>
      <% end %>
      <div id="post-form" style="display:none;"></div>
    </div>

    <div class="col-md-6">
      <div id="my-posts">
        <%= render @posts %>
      </div>
      <div id="infinite-scrolling">
        <%= will_paginate @posts %>
      </div>
    </div>
  </div>
</div>
